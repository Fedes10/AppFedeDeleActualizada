<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido a La Dele!"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="8"
        android:alpha="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp" />

    <TextView
        android:id="@+id/welcomeDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="La comunidad joven más vibrante, con música, eventos y fe. ¡Explora, conecta y vive la experiencia Dele!"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:gravity="center"
        android:shadowColor="#80000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="6"
        android:alpha="0.0"
        app:layout_constraintTop_toBottomOf="@id/welcomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />


    <!-- Card opcional para noticias, si quieres mantenerla -->
    <androidx.cardview.widget.CardView
        android:id="@+id/homeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="32dp"
        app:cardElevation="16dp"
        app:strokeColor="@color/orange_soft"
        app:strokeWidth="2dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#CCFFFFFF"
        app:cardBackgroundColor="#CCFFFFFF"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/welcomeDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">
            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noticias e Iglesia Joven"
                android:textColor="@color/text_secondary"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="16dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/newsButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Ver noticias"
                android:icon="@drawable/ic_event"
                android:backgroundTint="@color/orange_soft"
                android:textColor="@color/white"
                app:cornerRadius="24dp"
                android:elevation="8dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                app:rippleColor="@color/orange_accent"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

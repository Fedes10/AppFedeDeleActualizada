<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.about.AboutFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/aboutCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="32dp"
        app:cardElevation="16dp"
        app:strokeColor="@color/orange_soft"
        app:strokeWidth="2dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/white"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">
            <TextView
                android:id="@+id/aboutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acerca de"
                android:textColor="@color/orange_soft"
                android:textSize="32sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="20dp" />
            <TextView
                android:id="@+id/aboutSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información sobre la Delegación, miembros y valores"
                android:textColor="@color/text_secondary"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="16dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/aboutButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Ver más"
                android:icon="@drawable/ic_info"
                android:backgroundTint="@color/orange_accent"
                android:textColor="@color/white"
                app:cornerRadius="24dp"
                android:elevation="8dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                app:rippleColor="@color/orange_soft"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

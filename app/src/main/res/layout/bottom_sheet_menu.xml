<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="32dp"
    app:cardElevation="24dp"
    android:layout_margin="16dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="32dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancioneroButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="La Dele (Cancionero)"
            android:icon="@drawable/ic_music"
            android:backgroundTint="@color/orange_soft"
            android:textColor="@color/white"
            app:cornerRadius="24dp"
            android:elevation="8dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:rippleColor="@color/orange_accent"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/guadalupeButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Guadalupe"
            android:icon="@drawable/ic_event"
            android:backgroundTint="@color/orange_accent"
            android:textColor="@color/white"
            app:cornerRadius="24dp"
            android:elevation="8dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:rippleColor="@color/orange_soft"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fatimaButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="FÃ¡tima"
            android:icon="@drawable/ic_event"
            android:backgroundTint="@color/orange_soft"
            android:textColor="@color/white"
            app:cornerRadius="24dp"
            android:elevation="8dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:rippleColor="@color/orange_accent"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/inmaculadaButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Inmaculada"
            android:icon="@drawable/ic_event"
            android:backgroundTint="@color/orange_accent"
            android:textColor="@color/white"
            app:cornerRadius="24dp"
            android:elevation="8dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:rippleColor="@color/orange_soft"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/contactButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Contacto"
            android:icon="@drawable/ic_contact"
            android:backgroundTint="@color/orange_soft"
            android:textColor="@color/white"
            app:cornerRadius="24dp"
            android:elevation="8dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:rippleColor="@color/orange_accent"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/aboutButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Acerca de"
            android:icon="@drawable/ic_info"
            android:backgroundTint="@color/orange_accent"
            android:textColor="@color/white"
            app:cornerRadius="24dp"
            android:elevation="8dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:rippleColor="@color/orange_soft"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Login / Registro"
            android:icon="@drawable/ic_info"
            android:backgroundTint="@color/orange_soft"
            android:textColor="@color/white"
            app:cornerRadius="24dp"
            android:elevation="8dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:rippleColor="@color/orange_accent"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
